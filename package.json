{
	"name": "eg-notes",
	"description": "EG Notes",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onWebviewPanel:egNotes"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notes-panel",
					"title": "Notes",
					"icon": "$(heart)"
				}
			]
		},
		"views": {
			"notes-panel": [
				{
					"type": "webview",
					"id": "egNotes.notesView",
					"name": "Notes View"
				},
				{
					"id": "egNotes.notesExplorer",
					"name": "Notes Explorer",
					"icon": "media/dep.svg",
					"contextualTitle": "Notes Explorer",
					"contents": "No note found.\n[Add Note](command:egNotes.addNote)"
				}
			]
		},
		"commands": [
			{
				"command": "egNotes.addNote",
				"category": "Notes",
				"title": "Add Note"
			},
			{
				"command": "egNotes.clearNotes",
				"category": "Notes",
				"title": "Clear All",
				"icon": "$(clear-all)"
			},
			{
				"command": "egNotes.refreshEntry",
				"title": "Refresh my view"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "egNotes.clearNotes",
					"group": "navigation",
					"when": "view == egNotes.notesView"
				},
				{
					"command": "egNotes.refreshEntry",
					"when": "view == notesExplorer",
					"icon": "$(heart)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^20.8.9",
		"@types/vscode": "^1.73.0",
		"@types/vscode-webview": "^1.57.3",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.32.0",
		"typescript": "^5.2.2"
	}
}