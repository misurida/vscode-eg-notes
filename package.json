{
	"name": "eg-notes",
	"description": "EG Notes",
	"version": "0.0.1",
	"private": true,
	"publisher": "eglab",
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notes-panel",
					"title": "Notes",
					"icon": "$(output)"
				}
			]
		},
		"views": {
			"notes-panel": [
				{
					"id": "egNotes.notesExplorer",
					"name": "Simple List",
					"contents": "No note found.\n[Add Note](command:egNotes.addNote)"
				},
				{
					"id": "egNotes.notesView",
					"name": "View",
					"contents": "No note found.\n[Add Note](command:egNotes.addNote)"
				}
			]
		},
		"commands": [
			{
				"command": "egNotes.addNote",
				"title": "Add Note",
				"icon": "$(plus)",
				"category": "Notes"
			},
			{
				"command": "egNotes.addNoteFromSelection",
				"title": "Add Note From Selection",
				"icon": "$(plus)",
				"category": "Notes"
			},
			{
				"command": "egNotes.addNoteFromClipboard",
				"title": "Add Note From Clipboard",
				"icon": "$(plus)",
				"category": "Notes"
			},
			{
				"command": "egNotes.copyNoteValue",
				"title": "Copy Note",
				"icon": "$(copy)",
				"category": "Notes"
			},
			{
				"command": "egNotes.deleteNote",
				"title": "Delete Note",
				"icon": "$(trash)",
				"category": "Notes"
			},
			{
				"command": "egNotes.editNote",
				"title": "Edit Note",
				"icon": "$(edit)",
				"category": "Notes"
			},
			{
				"command": "egNotes.clearNotes",
				"title": "Clear All Notes",
				"icon": "$(clear-all)",
				"category": "Notes"
			},
			{
				"command": "egNotes.refreshEntry",
				"title": "Refresh the list",
				"icon": "$(refresh)"
			},
			{
				"command": "egNotes.searchNotes",
				"title": "Search",
				"icon": "$(search)",
				"category": "Notes"
			},
			{
				"command": "egNotes.searchNotesClear",
				"title": "Clear Search",
				"icon": "$(search-stop)",
				"category": "Notes"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "egNotes.addNoteFromSelection",
					"when": "false"
				},
				{
					"command": "egNotes.copyNoteValue",
					"when": "false"
				},
				{
					"command": "egNotes.deleteNote",
					"when": "false"
				},
				{
					"command": "egNotes.editNote",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "egNotes.clearNotes",
					"group": "navigation",
					"when": "view == egNotes.notesView"
				},
				{
					"command": "egNotes.clearNotes",
					"icon": "$(refresh)",
					"when": "view == egNotes.notesExplorer"
				},
				{
					"command": "egNotes.searchNotesClear",
					"icon": "$(search-stop)",
					"when": "view == egNotes.notesExplorer"
				},
				{
					"command": "egNotes.refreshEntry",
					"icon": "$(refresh)",
					"when": "view == egNotes.notesExplorer"
				},
				{
					"command": "egNotes.addNoteFromClipboard",
					"icon": "$(add)",
					"when": "view == egNotes.notesExplorer"
				},
				{
					"command": "egNotes.addNote",
					"group": "navigation",
					"icon": "$(add)",
					"when": "view == egNotes.notesExplorer"
				},
				{
					"command": "egNotes.searchNotes",
					"group": "navigation",
					"icon": "$(search)",
					"when": "view == egNotes.notesExplorer"
				}
			],
			"view/item/context": [
				{
					"command": "egNotes.editNote",
					"when": "view == egNotes.notesExplorer && viewItem == note",
					"group": "inline"
				},
				{
					"command": "egNotes.copyNoteValue",
					"when": "view == egNotes.notesExplorer && viewItem == note",
					"group": "inline"
				},
				{
					"command": "egNotes.deleteNote",
					"when": "view == egNotes.notesExplorer && viewItem == note",
					"group": "inline"
				},
				{
					"command": "egNotes.searchNotesClear",
					"when": "view == egNotes.notesExplorer && viewItem == placeholder",
					"group": "inline"
				}
			],
			"editor/context": [
				{
					"command": "egNotes.addNoteFromSelection",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^20.8.9",
		"@types/vscode": "^1.73.0",
		"@types/vscode-webview": "^1.57.3",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.32.0",
		"fuse.js": "^7.0.0",
		"typescript": "^5.2.2"
	}
}